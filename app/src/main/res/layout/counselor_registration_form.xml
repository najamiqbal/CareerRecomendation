<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="10dp">


        <TextView
            android:id="@+id/iv_profile_photo_buyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textSize="30dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:id="@+id/et_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@id/iv_profile_photo_buyer"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:padding="10dp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/edit_text_style"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_text"
                />

            <EditText
                android:id="@+id/user_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile (330******)"
                android:padding="10dp"
                android:digits="0123456789+"
                android:maxLength="11"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/edit_text_style"
                android:drawableLeft="@drawable/ic_mobile"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/hint_text"
                />
            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:padding="10dp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/edit_text_style"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_text"
                />

            <EditText
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:padding="10dp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/edit_text_style"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_text"
                />
            <EditText
                android:id="@+id/user_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Qualification"
                android:padding="10dp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/edit_text_style"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_text"
                />
            <EditText
                android:id="@+id/user_office_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Business Address"
                android:padding="10dp"
                android:fontFamily="@font/lato_regular"
                android:background="@drawable/edit_text_style"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/hint_text"
                />
            <EditText
                android:id="@+id/user_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginTop="20dp"
                android:background="@drawable/comentboxstyle"
                android:gravity="top|start"
                android:hint="Write your introduction"
                android:inputType="textMultiLine"
                android:lines="8"
                android:fontFamily="@font/lato_regular"
                android:overScrollMode="always"
                android:padding="6dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:scrollbarSize="25dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#B6B6B6"
                android:id="@+id/user_password"
                app:passwordToggleEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="15"
                    android:drawableLeft="@drawable/ic_lock"
                    android:inputType="textPassword"
                    android:textSize="20dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:scrollbarSize="25dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#B6B6B6"
                android:id="@+id/user_confirm_password"
                app:passwordToggleEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="15"
                    android:drawableLeft="@drawable/ic_lock"
                    android:inputType="textPassword"
                    android:textSize="20dp" />

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:text="Register Now"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>